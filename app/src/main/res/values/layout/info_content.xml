            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="10dp"
            >

            <include
                android:id="@+id/detail1"
                layout="@layout/info_detail"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_detail2"
            android:layout_width="match_parent"
