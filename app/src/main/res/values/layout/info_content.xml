            android:background="@color/gray"
            android:padding="10dp"
            >

            <include
                android:id="@+id/detail5"
                layout="@layout/info_detail"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/info_detail6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:padding="10dp"
            >

