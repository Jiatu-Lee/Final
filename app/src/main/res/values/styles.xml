<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/lemon</item>

    </style>

    <style name="Theme.AppCompat.Launcher" parent="Theme.AppCompat.Activity">
        <item name="android:windowBackground">@drawable/index_layout</item>
        <!--<item name="android:windowTitleSize">40dp</item>-->
        <!--<item name="android:windowTitleBackgroundStyle">@color/green_dark</item>-->

    </style>

    <style name="Theme.AppCompat.Activity" parent="Theme.AppCompat.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/green_light</item>
        <item name="colorAccent">@color/lemon</item>
    </style>
    <!--
            <item name="android:windowFullscreen">true</item>
    -->
    <style name="footbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="main_bottom_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- 基本样式 -->
    <style name="base_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- textview样式 -->
    <style name="usertext">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <!-- 文本右边箭头样式 -->
    <style name="img_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/arrow</item>

    </style>


    <!-- view分割线样式 -->
    <style name="bg_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray</item>
    </style>

<style name="bg_space">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:background">@color/gray</item>
</style>

</resources>
